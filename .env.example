# Environment Configuration
# Copy this file to .env and update the values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/saas_platform
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/saas_platform_test

# Redis
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LANGCHAIN_API_KEY=your-langchain-api-key

# SAP Endpoints
SAP_PI_ENDPOINT=https://your-sap-pi-endpoint
SAP_PO_ENDPOINT=https://your-sap-po-endpoint  
SAP_BTP_ENDPOINT=https://your-sap-btp-endpoint
SAP_BTP_CLIENT_ID=your-btp-client-id
SAP_BTP_CLIENT_SECRET=your-btp-client-secret

# Authentication
AUTH0_DOMAIN=your-auth0-domain
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_AUTH0_DOMAIN=your-auth0-domain
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id

# Development
ENVIRONMENT=development
DEBUG=true

# Agent Configuration
AGENT_CONCURRENCY_LIMIT=10
TASK_TIMEOUT=300
MAX_RETRIES=3

# Multi-tenancy
DEFAULT_TENANT_ID=default
TENANT_ISOLATION_MODE=schema
